<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:back_to_resource_list,scope: :sale_rates, resource: plural_resource_name(Spree::SaleRate)), spree.admin_sale_rates_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for [:admin, resource] do |f| %>
    <div class="row" data-hook="admin_sale_rates_form_fields">
      <div class="col-md-2" data-hook="admin_sale_rates_form">

        <div class="form-group">
          <%= f.label Spree.t(:currency,scope: :sale_rates) %> <span class="required">XXX</span>
          <%= f.text_field :currency, class: 'form-control' %>
          <%= f.error_message_on :currency %>
        </div>
      </div>

      <div class="col-md-4" data-hook="admin_sale_rates_form">
        <div class="form-group">
          <%= f.label Spree.t(:rate,scope: :sale_rates) %> <span class="required">Y.YYYY</span>
          <%= f.text_field :rate, class: 'form-control' %>
          <%= f.error_message_on :rate %>
        </div>
      </div>



    </div>

    <%= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>